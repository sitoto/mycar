<h1>Listing pages</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Permalink</th>
    <th>Keywords</th>
    <th>Description</th>
    <th>Body</th>
    <th>Body html</th>
    <th>View code</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.permalink %></td>
    <td><%= page.keywords %></td>
    <td><%= page.description %></td>
    <td><%= page.body %></td>
    <td><%= page.body_html %></td>
    <td><%= page.view_code %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

