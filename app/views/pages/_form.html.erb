<%= simple_form_for(@page) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :permalink %>
    <%= f.input :keywords %>
    <%= f.input :description %>
    <%= f.input :body %>
    <%= f.input :body_html %>
    <%= f.input :view_code %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
